# Django Configuration
SECRET_KEY='your-secret-key-here'
DEBUG=True

# Supabase Configuration (Required for Email OTP Authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Supabase Database Configuration (Optional - uses Supabase managed PostgreSQL)
# Comment out to use local PostgreSQL database instead
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password-here

# Local Database Configuration (Used when SUPABASE_DB_HOST is not set)
DB_NAME=backend_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (Development - local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=optional-password

# Upstash Redis Configuration (Production - Celery broker/result backend)
# Get these from your Upstash Redis dashboard
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io:6379
# UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Render Deployment Configuration
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# CORS Configuration (comma-separated list of allowed origins)
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-app.onrender.com

# Optional: Twilio Configuration (if phone-based features are needed)
# TWILIO_MESSAGE_SERVICE_SID=your-message-service-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_ACCOUNT_SID=your-account-sid
