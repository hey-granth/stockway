# Production Environment Configuration for Render Deployment
# Copy this file and set actual values for production deployment

# Django Configuration
SECRET_KEY='generate-a-secure-random-key-here'
DEBUG=False

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Supabase Managed PostgreSQL Database (Production)
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-production-db-password

# Upstash Redis Configuration (Required for Production Celery)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io:6379
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Render Configuration
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-app.onrender.com

# Optional: Supabase Edge Function for push/SMS notifications
# SUPABASE_EDGE_FUNCTION_URL=https://your-project.supabase.co/functions/v1/send-notification

# Optional: Twilio Configuration (if phone-based features are needed)
# TWILIO_MESSAGE_SERVICE_SID=your-message-service-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_ACCOUNT_SID=your-account-sid
